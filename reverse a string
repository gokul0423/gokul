#include <stdio.h>
#include <string.h>
int main() 
{
    char str[100]; 
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);
    str[strcspn(str, "\n")] = '\0';
    int length = strlen(str);
    char reversed[length + 1];
    for (int i = 0; i < length; i++) 
    {
        reversed[i] = str[length - 1 - i];
    }
    reversed[length] = '\0'; 
    printf("Reversed string: %s\n", reversed);
    return 0;
}
